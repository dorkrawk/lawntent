!!!
%html{lang: 'en'}
  %head
    %title= "Lawntent"
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %h1 Lawn Tent
    .user_stuff
      - if user_signed_in?
        = "Hi #{current_user.email}!"
      - else
        = link_to "login", login_path
    %p.notice= notice
    %p.alert= alert

    = yield

    %br
    2015 Lawntent
