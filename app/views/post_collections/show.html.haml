%h1= @post_collection.title
%h3
  template:
  = link_to @post_collection.template.title, @post_collection.template

= button_to "Create New Post", new_post_path(@post_collection), method: :get
- @posts.each do |post|
  %li
    = link_to post.description, post_path(@post_collection, post)
    by
    = post.author.try(:email)
    -
    = post.created_at.strftime("%b %e %Y %l:%M%P")
